{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "minimumReleaseAge": "7 days",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "bundler": {
    "enabled": true
  }
}
